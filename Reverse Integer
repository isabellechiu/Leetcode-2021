class Solution:
    def reverse(self, x: int) -> int:
        
        if x >= 0:
            a=int(str(x)[::-1])
        elif x < 0:
            a=-1 * int(str(x*-1)[::-1])  
        minx = -2**31  
        maxx = 2**31 - 1 
        if a >= maxx or a <= minx:
            return 0
        else:
            return a
